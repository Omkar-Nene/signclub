{
  "manifest_version": 3,
  "name": "SignClub - Digital Signatures for Google Docs",
  "version": "1.0.0",
  "description": "Create and insert digital signatures into Google Docs instantly. Save signatures, insert with right-click, sync across devices.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://drive.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-256.png",
      "48": "favicon-256.png",
      "128": "favicon-256.png"
    }
  },
  "icons": {
    "16": "favicon-256.png",
    "48": "favicon-256.png",
    "128": "favicon-256.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/*"],
      "js": ["content-google-docs.js"],
      "run_at": "document_idle"
    }
  ]
}
